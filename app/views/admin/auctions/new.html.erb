<div class="row">
  <div class="col-lg-12">
    <h1>Novo Lote</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="main-box">
      <%= simple_form_for(@auction, url: admin_auctions_path, method: :post) do |f| %>
        <header class="main-box-header clearfix">
          <h3><span>Detalhes</span></h3>
        </header>
        <div class="main-box-body clearfix">
          <div class="row">
            <div class="form-group col-xs-6">
              <%= f.input :name %>
            </div>
            <div class="form-group col-xs-6">
              <%= f.input :description %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-6">
              <%= f.input :start_value, as: :string, input_html: { :class => "money" , data: { 'mask' => '0.000.000.000,00', 'mask-reverse' => "true" }, maxlength: 15, length: 20} %>
            </div>
            <div class="form-group col-xs-6">
              <%= f.input :ending_value, as: :string, input_html: { :class => "money" , data: { 'mask' => '0.000.000.000,00', 'mask-reverse' => "true" }, maxlength: 15, length: 20} %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-12">
              <%= f.input :image, as: :file %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-12">
              <%= f.submit 'Enviar', class: 'btn btn-success' %>
              <%= link_to 'Cancelar', admin_auctions_path, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
